<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/pad_3dp"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    app:cardElevation="@dimen/pad_5dp"
    app:cardPreventCornerOverlap="false"
    card_view:cardCornerRadius="@dimen/pad_5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/size_cart_image_size"
            android:layout_height="@dimen/size_cart_image_size"
            android:visibility="visible"
            android:src="@drawable/on_sale_item1"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/lbl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img"
            android:layout_toLeftOf="@+id/delete_cart"
            android:gravity="left|center"
            android:text="cddddf"
            android:textColor="@color/main_grey_dk1"
            android:textSize="@dimen/txt_12sp"
            android:paddingLeft="@dimen/pad_5dp"
            android:paddingRight="@dimen/pad_5dp"
            android:paddingTop="@dimen/pad_5dp"
            android:ellipsize="end"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/lbl3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/pad_5dp"
            android:paddingRight="@dimen/pad_5dp"
            android:layout_toRightOf="@+id/img"
            android:text="Category"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_below="@+id/lbl1"
            android:textColor="@color/main_grey"
            android:textSize="@dimen/txt_12sp" />

        <TextView
            android:id="@+id/lbl4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INR"
            android:paddingLeft="@dimen/pad_5dp"
            android:paddingRight="@dimen/pad_5dp"
            android:layout_toRightOf="@+id/img"
            android:layout_below="@+id/lbl3"
            android:textColor="@color/main_grey"
            android:textSize="@dimen/txt_12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$000-$000"
            android:layout_below="@+id/lbl3"
            android:layout_toRightOf="@+id/lbl4"
            android:paddingLeft="@dimen/pad_5dp"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="@dimen/txt_12sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/delete_cart"
            android:layout_width="@dimen/size_cart_delete_size"
            android:layout_height="@dimen/size_cart_delete_size"
            android:src="@drawable/delete_cart"
            android:padding="@dimen/pad_5dp"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/btnAdd"
            android:layout_width="@dimen/size_cart_delete_size"
            android:layout_height="@dimen/size_cart_delete_size"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/img"
            android:scaleType="centerInside"
            android:src="@drawable/heart_blank" />
    </RelativeLayout>

</android.support.v7.widget.CardView>