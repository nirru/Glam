<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cardList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/price_layout"
        android:layout_margin="@dimen/pad_5dp" />

    <LinearLayout
        android:id="@+id/price_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnDone"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/pad_10dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOTAL"
            android:textColor="@color/main_grey_dk1"
            android:textSize="@dimen/txt_18sp" />

        <TextView
            android:id="@+id/currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_10dp"
            android:text="INR"
            android:textColor="@color/main_grey"
            android:textSize="@dimen/txt_12sp" />

        <TextView
            android:id="@+id/price_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_10dp"
            android:text="#467"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="@dimen/txt_18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnDone"
        style="@style/btn_blue"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Complete Purchase" />

</RelativeLayout>